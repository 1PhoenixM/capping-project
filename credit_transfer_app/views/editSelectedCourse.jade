extends ./wrapper.jade

block content
    h2 Edit Course
    br
    form(name = 'editSelectedCourse', action='/admission/transfer/credits/app/editCourseAction',method='POST')
      table(style='width:50%')
        tr
          td School: 
          td
            select(id='schools',name='schools')
              each school in schools
                option(value=school.sid, selected=selected)= school.schoolname
        tr
          td Department: 
          td
            select(id='departments',name='departments')
              each department in departments
                option(value=department.did, selected=selected)= department.departmentname
        tr
          td Course Name:
          td
            input(type='text', name='courseName', value=courseData.coursename, align='right')
        tr
          td Course Number:
          td
            input(type='text', name='courseNumber', value=courseData.coursenumber, align='right')
        tr
          td Credits:
          td
            input(type='text', name='credits', value=courseData.credits, align='right')
        tr
          td Description:
          td
            textarea(rows='4', cols='50', name='description', value=courseData.description, align='right')
        tr
          td
            input(type='submit',value='Add Course')
 
