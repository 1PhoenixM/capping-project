extends ./wrapper.jade

block content
    h2 Edit User
    p
      form(name = 'EditUser', action='/admission/transfer/credits/app/editUserAction',method='POST')
        input(type='hidden', name='pid', value=userData.pid)
        table(style='width:50%')
          tr
            td E-mail Address: 
            td
              input(type='text', name='emailAddress', algin='right', value=userData.emailaddress)
          tr
            td First Name: 
            td
              input(type='text', name='firstName', align='right', value=userData.firstname)
          tr
            td Last Name: 
            td 
              input(type='text', name='lastName', align='right', value=userData.lastname)
          tr
            td
              input(type='submit',value='Edit User')
