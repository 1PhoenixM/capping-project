extends ./wrapper.jade

block content
    h2 Edit School
    p
    form(name = 'editSchool', action='/admission/transfer/credits/app/editSelectedSchool',method='POST')
      table(style='width:100%', text-align='center', border='1')
        tr
          th Edit
          th School
          th Country
          th Address1
          th Address2
          th City
          th State
          th Zip
        each school in schools
          tr
            td
              input(type='radio', name='sid', value=school.sid)
            td= school.schoolname
            td= school.country
            td= school.address1
            td= school.address2
            td= school.city
            td= school.state
            td= school.zip
      input(type='submit' value='Submit')
