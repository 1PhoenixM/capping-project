extends ./wrapper.jade

block content
    h2 Edit Department
    p
    form(name = 'editDepartment', action='/admission/transfer/credits/app/editSelectedDepartment',method='POST')
      table(style='width:100%', text-align='center', border='1')
        tr
          th Edit
          th Department
          th School
        each department in departments
          tr
            td
              input(type='radio', name='did', value=department.did)
            td= department.departmentname
            td= department.schoolname
      input(type='submit' value='Submit')
