extends ./wrapper.jade

block content
    h2 Login
    form(name = 'login', action='/admission/transfer/credits/app/loginAction',method='POST' onSubmit = 'return encode()')
      table(style='width:50%')
        tr
          td E-mail Address:
          td 
            input(type='text', name='emailAddress')
        tr
          td Password: 
          td 
            input(type='password', name='password')
        tr
          td
            input(type='submit',value='Login')
      script(src='http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha256.js')
      script.
        function encode(){
        document.login.password.value = CryptoJS.SHA256(document.login.password.value);
        return true;      
        }
    br
    a(href='/admission/transfer/credits/app/forgotPassword') Forgot Password?
